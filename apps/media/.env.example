# === Development Mode ===
# Set to 'true' for local development (skips auth and uses filesystem)
TINA_PUBLIC_IS_LOCAL=true

# === Admin Authentication ===
# Comma-separated list of email addresses allowed to access admin
ADMIN_WHITELIST=editor@solana.com,admin@solana.com
# Random 32+ character secret for JWT signing
JWT_SECRET=your-random-32-char-secret-here
# Base URL for the app (used for magic links)
NEXT_PUBLIC_APP_URL=https://solana-com-media.vercel.app

# === SendGrid (Magic Links) ===
SENDGRID_API_KEY=SG.xxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@solana.com

# === GitHub Integration (Git Provider) ===
# Personal access token with repo scope
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_xxxxxxxxxxxx
GITHUB_OWNER=solana-foundation
GITHUB_REPO=solana-com
# Default branch (or use VERCEL_GIT_COMMIT_REF for preview deployments)
GITHUB_BRANCH=main

# === Vercel KV (Database Adapter) ===
# Auto-populated when you link a Vercel KV store to your project
KV_REST_API_URL=https://xxxx.kv.vercel-storage.com
KV_REST_API_TOKEN=xxxxxxxxxxxx

# === Cross-app navigation ===
# Set this to the main site URL so header/footer links navigate correctly
# Production: https://solana.com
# Preview: https://solana-com-git-[branch].vercel.app
# Local dev: http://localhost:3000
NEXT_PUBLIC_MAIN_SITE_URL=https://solana.com
