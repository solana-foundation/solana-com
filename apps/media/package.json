{
  "name": "@solana-com/media",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "tinacms dev -c \"next dev -p 3001\"",
    "build": "tinacms build --skip-search-index && next build",
    "build-local": "tinacms build --local --skip-indexing --skip-cloud-checks && next build",
    "build-public": "TINA_PUBLIC_IS_LOCAL=true tinacms build --local --skip-indexing --skip-cloud-checks && next build",
    "start": "tinacms build && next start",
    "export": "npm run build && next export",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:content": "prettier --write content/**/*.mdx",
    "lint:content": "eslint content/**/*.mdx --fix",
    "dev:build": "next build",
    "clean": "rm -rf node_modules && rm -rf tina/__generated__"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-slot": "^1.2.3",
    "@solana-com/ui-chrome": "workspace:*",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "@workspace/i18n": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.484.0",
    "mermaid": "^11.10.1",
    "motion": "^12.23.12",
    "next": "catalog:",
    "next-intl": "catalog:",
    "next-themes": "^0.4.6",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-icons": "^5.5.0",
    "react-player": "^2.16.1",
    "react-tweet": "^3.2.2",
    "react-use-measure": "^2.1.7",
    "rss-parser": "^3.13.0",
    "rtl-detect": "^1.1.2",
    "shiki": "^3.11.0",
    "styled-jsx": "^5.1.7",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^4.1.12",
    "tinacms": "^2.8.2",
    "tw-animate-css": "^1.3.7",
    "usehooks-ts": "^3.1.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@svgr/webpack": "^8.1.0",
    "@tinacms/cli": "^1.10.2",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^22.18.0",
    "@types/react": "^19.0.14",
    "@types/react-dom": "^19.0.6",
    "@types/rtl-detect": "^1.0.3",
    "@types/styled-components": "^5.1.34",
    "@workspace/config-typescript": "workspace:*",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-mdx": "^3.6.2",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "prettier": "^3.3.3",
    "typescript": "5.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{mdx,md}": [
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
