{
  "version": 1.8,
  "$schema": "https://lingo.dev/schema/i18n.json",
  "locale": {
    "source": "en",
    "targets": [
      "en",
      "ar",
      "de",
      "el",
      "es",
      "fi",
      "fr",
      "hi",
      "id",
      "it",
      "ja",
      "ko",
      "nl",
      "pl",
      "pt",
      "ru",
      "tr",
      "uk",
      "vi",
      "zh"
    ]
  },
  "buckets": {
    "json": {
      "lockedKeys": ["pages"],
      "include": ["public/locales/[locale]/*.json"]
    },
    "txt": {
      "include": ["public/llms-[locale].txt"]
    }
  }
}
