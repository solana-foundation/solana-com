                        "component": {
                          "name": "Text",
                          "options": {
                            "text": "<p><strong>Table of Contents</strong></p><p><br></p><p style=\"text-indent: 2em;\"><a href=\"#ethereums-original-consensus\" rel=\"noopener noreferrer\">Ethereum's original consensus</a></p><p style=\"text-indent: 2em;\"><a href=\"#ethereums-current-consensus\" rel=\"noopener noreferrer\">Ethereum's current consensus</a></p><p style=\"text-indent: 2em;\"><a href=\"#solanas-consensus\" rel=\"noopener noreferrer\">Solana's consensus</a></p><p style=\"text-indent: 2em;\"><a href=\"#summary\" rel=\"noopener noreferrer\">Summary</a></p>"
                          }
                        },
                        "responsiveStyles": {
