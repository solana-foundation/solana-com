          {
            "@type": "@builder.io/sdk:Element",
            "@version": 2,
            "id": "builder-15194c59fc5743c497435d30711aa036",
            "properties": {
              "id": "solanas-consensus"
            },
            "component": {
              "name": "Copy",
              "options": {
                "rawHtml": "<h3><strong>Solana's consensus</strong></h3>\n"
              }
            },
            "responsiveStyles": {
              "large": {
                "display": "flex",
                "flexDirection": "column",
                "position": "relative",
                "flexShrink": "0",
                "boxSizing": "border-box",
