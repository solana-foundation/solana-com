              }
            }
          },
          {
            "@type": "@builder.io/sdk:Element",
            "@version": 2,
            "id": "builder-17fd88f048f54d07ba09eadb53bed21b",
            "meta": {
              "previousId": "builder-6e58c7631a6e41e4b43f7c86e9687f38"
            },
            "component": {
              "name": "Custom Code",
              "options": {
                "code": "<style type=\"text/css\">\n  table.custom{\n      width: 100%;\n  }\n  table.custom thead td{\n      font-weight: 600;\n  }\n  table.custom td{\n      padding: 8px 10px;\n      border: 1px solid #414141;\n  }\n  table.custom .gray{\n      background-color: #424242;\n  }\n  table.custom .green{\n      background-color: rgba(180, 251, 221, 0.7);\n\n  }\n  table.custom .red{\n      background-color: rgba(255, 117, 74, 0.7);\n  }\n  table.custom .yellow{\n      background-color: rgba(232, 241, 128, 0.7)\n  }\n</style>\n<table class=\"custom\">\n  <thead>\n    <tr>\n      <td>Ethereum's Account</td>\n      <td>Solana's Account</td>\n    </tr>\n  </thead>\n  <tbody>\n    <tr>\n      <td><code>Account</code></td>\n      <td><code>owner</code></td>\n    </tr>\n    <tr>\n      <td><code>balance</code></td>\n      <td><code>lamports</code></td>\n    </tr>\n    <tr>\n      <td><code>nonce</code></td>\n      <td>[no equivalent]</td>\n    </tr>\n\n    <tr>\n      <td><code>code hash</code></td>\n      <td><code>executable && data</code></td>\n    </tr>\n    <tr>\n      <td><code>storage hash</code></td>\n      <td><code>data</code></td>\n    </tr>\n    <tr>\n      <td>[no equivalent]</td>\n      <td><code>rent_epoch</code></td>\n    </tr>\n  </tbody>\n</table>\n",
                "scriptsClientOnly": true
              }
            },
            "responsiveStyles": {
