{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "CODE_RUN_SERVER_URL",
    "DEVELOPER_CONTENT_API_KEY",
    "DEVELOPER_DATA_API_KEY",
    "DEVELOPER_DATA_API_URL",
    "EDGE_CONFIG",
    "INKEEP_API_KEY",
    "LUMA_PRIVATE_API_KEY",
    "MIRROR_API_KEY",
    "NEXT_PUBLIC_BUILDER_API_KEY",
    "NEXT_RUNTIME",
    "RIVER_KEY",
    "SENTRY_AUTH_TOKEN",
    "SENTRY_ORG",
    "SENTRY_PROJECT",
    "SENTRY_SUPPRESS_GLOBAL_ERROR_HANDLER_FILE_WARNING",
    "SIMPLECAST_API_KEY",
    "SIMPLECAST_PODCAST_ID",
    "TXTX_SURFNET_URL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "YOUTUBE_API_KEY",
    "YOUTUBE_CHANNEL_ID"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "outputs": []
    },
    "format:check": {
      "outputs": [],
      "cache": false
    },
    "format:all": {
      "outputs": [],
      "cache": false
    }
  }
}
