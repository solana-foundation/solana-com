{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**", ".next/**"]
      },
      "lint": {
        "outputs": []
      },
      "test": {
        "dependsOn": ["build"],
        "outputs": []
      },
      "dev": {
        "cache": false,
        "persistent": true
      },
      "format:check": {
        "outputs": [],
        "cache": false
      }
    }
  }