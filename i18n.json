{
  "version": 1.5,
  "locale": {
    "source": "en",
    "targets": ["de", "zh", "ko", "hi"]
  },
  "provider": {
    "id": "lingo",
    "model": "best",
    "prompt": ""
  },
  "buckets": {
    "markdown": {
      "include": ["content/docs/[locale]/core/*.mdx"]
    },
    "json": {
      "include": ["content/docs/[locale]/core/meta.json"]
    }
  },
  "$schema": "https://lingo.dev/schema/i18n.json"
}
