{
  "version": 1.8,
  "$schema": "https://lingo.dev/schema/i18n.json",
  "locale": {
    "source": "en",
    "targets": [
      "en",
      "ar",
      "de",
      "el",
      "es",
      "fi",
      "fr",
      "id",
      "it",
      "ja",
      "ko",
      "nl",
      "pl",
      "pt",
      "ru",
      "tr",
      "uk",
      "vi",
      "zh"
    ]
  },
  "buckets": {
    "mdx": {
      "include": [
        "content/docs/[locale]/*.mdx",
        "content/docs/[locale]/*/*.mdx",
        "content/docs/[locale]/*/*/*.mdx",
        "content/docs/[locale]/*/*/*/*.mdx",
        "content/learn/[locale]/*.mdx"
      ]
    },
    "json": {
      "lockedKeys": ["pages"],
      "include": [
        "public/locales/[locale]/*.json",
        "content/docs/[locale]/meta.json",
        "content/docs/[locale]/*/meta.json",
        "content/docs/[locale]/*/*/meta.json",
        "content/docs/[locale]/*/*/*/meta.json"
      ]
    }
  }
}
